{% extends "layout.twig" %}

{% block title %}OSI-Modell{% endblock %}

{% block %}
    <div class="bod">

      <h3>OSI-Modell</h3>

      <table>
        <caption>OSI-Modell</caption>
        <tr>
          <th>Layer</th>
          <th>Name</th>
          <th>Englischer Name</th>
          <th>Einordnung</th>
          <th>Einheiten</th>
          <th>Protokollbeispiele</th>
        </tr>
        <tr>
          <td>Layer 1</td>
          <td>Bild√ºbertragung</td>
          <td>Physical</td>
          <td>Bits, Symbole</td>
          <td rowspan="4">Transportorientiert</td>
          <td>DHCP, DNS, FTP, HTTP, HTTPS</td>
        </tr>
        <tr>
          <td>Layer 2</td>
          <td>Sicherung</td>
          <td>Data Link</td>
          <td>Rahmen(Frames)</td>
          <td>Ethernet (IEEE 802.3), WLAN (IEEE 802.11), MAC, Token Ring</td>
        </tr>
        <tr>
          <td>Layer 3</td>
          <td>Vermittlung-/Paket</td>
          <td>Network</td>
          <td>Pakete</td>
          <td>IP, IPsec, IPX, ICMP, IGMP</td>
        </tr>
        <tr>
          <td>Layer 4</td>
          <td>Transport</td>
          <td>Transport</td>
          <td>TCP = Segmente
          UDP = Datagramme</td>
          <td>TCP, UDP, SCTP, SPX</td>
        </tr>
        <tr>
          <td>Layer 5</td>
          <td>Sitzung</td>
          <td>Session</td>
          <td rowspan="3">Daten</td>
          <td rowspan="3">Anwendungsorientiert</td>
          <td rowspan="3">DHCP, DNS, FTP, HTTP, HTTPS, SMTP, XMPP</td>
        </tr>
        <tr>
          <td>Layer 6</td>
          <td>Darstellung</td>
          <td>Presentation</td>
        </tr>
        <tr>
          <td>Layer 7</td>
          <td>Anwendung</td>
          <td>Application</td>
        </tr>
      </table>

    </div>
{% endblock %}
